<h1 class="mt-3 mb-4">SNS Publisher</h1>
<form action="/publish-message" class="form-group">
    <div class="form-group row">
        <label for="subject" class="col-sm-2 col-form-label">Subject <small>(Optional)</small>: </label>
        <div class="col-sm-10">
            <input type="text" id="subject" name="subject" class="form-control"></input>
        </div>
    </div>
    <div class="form-group row">
        <label for="message" class="col-sm-2 col-form-label">Message: </label>
        <div class="col-sm-10">
            <input type="text" id="message" name="message" required="true" class="form-control"></input>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Publish</button>
        </div>
    </div>
</form>